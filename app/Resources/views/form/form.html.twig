{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}
        {#
            fonctions twig :
                form_start : création de la balise <form>
                form_end : création de la balise </form>
                form_label : intitulé d'un champ
                form_widget : création d'un champ
                form_errors : erreur d'un champ
              le bouton de soumission est à créer
        #}
        <div class="row">
            <div class="col">
                {{ form_start(form, { 'attr' : { 'novalidate' : 'novalidate' }}) }}
                <p>
                    {{ form_label(form.firstname, 'Prénom :') }}
                    {{ form_widget(form.firstname, { 'attr' : {
                        'placeholder' : 'Saisissez votre prénom',
                        'autofocus' : 'autofocus'
                    }}) }}
                    {{ form_errors(form.firstname) }}
                </p>
                <p>
                    {{ form_label(form.lastname, 'Nom :') }}
                    {{ form_widget(form.lastname) }}
                    {{ form_errors(form.lastname) }}
                </p>
                <p>
                    {{ form_label(form.email, 'E-Mail :') }}
                    {{ form_widget(form.email) }}
                    {{ form_errors(form.email) }}
                </p>
                <p>
                    {{ form_label(form.message, 'Message :') }}
                    {{ form_widget(form.message) }}
                </p>
                <p>
                    <input type="submit" name="submit" value="Valider" class="btn btn-info">
                </p>
                {{ form_end(form) }}


            </div>
        </div>
{% endblock %}


